<interface domain="DownFall">
  <requires lib="gtk" version="4.0"/>
  <object class="GtkAdjustment" id="drift_adjust">
    <property name="upper">100</property>
    <property name="step-increment">1</property>
  </object>
  <object class="GtkAdjustment" id="max_adjust">
    <property name="lower">1</property>
    <property name="upper">30</property>
    <property name="step-increment">1</property>
  </object>
  <object class="GtkAdjustment" id="rot_adjust">
    <property name="upper">360</property>
    <property name="step-increment">1</property>
  </object>
  <object class="GtkAdjustment" id="time_adjust">
    <property name="lower">2</property>
    <property name="upper">10</property>
    <property name="step-increment">1</property>
  </object>
  <object class="GtkNotebook" id="prefs_widget">
    <child>
      <object class="GtkNotebookPage">
        <property name="child">
          <object class="GtkGrid">
            <property name="margin-start">18</property>
            <property name="margin-end">18</property>
            <property name="margin-top">18</property>
            <property name="margin-bottom">18</property>
            <property name="orientation">vertical</property>
            <property name="row-spacing">18</property>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="vexpand">1</property>
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Text to Display (separate items with commas)</property>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="display_field">
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Text Color</property>
                  </object>
                </child>
                <child>
                  <object class="GtkColorButton" id="text_color">
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Text Font</property>
                  </object>
                </child>
                <child>
                  <object class="GtkFontButton" id="text_font">
                    <property name="font">Sans 12</property>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">3</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Show Matrix© trails</property>
                  </object>
                </child>
                <child>
                  <object class="GtkSwitch" id="matrix_switch">
                    <property name="active">1</property>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">4</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Firework explosion endings</property>
                  </object>
                </child>
                <child>
                  <object class="GtkSwitch" id="firework_switch">
                    <property name="active">1</property>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">5</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="halign">start</property>
                <property name="hexpand">1</property>
                <property name="label" translatable="yes">Text Appearance</property>
                <attributes>
                  <attribute name="weight" value="bold"></attribute>
                </attributes>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
          </object>
        </property>
        <property name="tab">
          <object class="GtkLabel">
            <property name="label" translatable="yes">Appearance</property>
          </object>
        </property>
      </object>
    </child>
    <child>
      <object class="GtkNotebookPage">
        <property name="child">
          <object class="GtkGrid">
            <property name="margin-start">18</property>
            <property name="margin-end">18</property>
            <property name="margin-top">18</property>
            <property name="margin-bottom">18</property>
            <property name="orientation">vertical</property>
            <property name="row-spacing">18</property>
            <child>
              <object class="GtkLabel">
                <property name="halign">start</property>
                <property name="hexpand">1</property>
                <property name="label" translatable="yes">Falling Behavior</property>
                <attributes>
                  <attribute name="weight" value="bold"></attribute>
                </attributes>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Fall on</property>
                  </object>
                </child>
                <child>
                  <object class="GtkComboBoxText" id="fall_monitor">
                    <items>
                      <item id="0" translatable="yes">Current monitor</item>
                      <item id="1" translatable="yes">Primary monitor</item>
                    </items>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Fall Direction</property>
                  </object>
                </child>
                <child>
                  <object class="GtkComboBoxText" id="fall_direc">
                    <items>
                      <item id="0" translatable="yes">Down (↓)</item>
                      <item id="1" translatable="yes">Up (↑)</item>
                      <item id="2" translatable="yes">Right (→)</item>
                      <item id="3" translatable="yes">Left (←)</item>
                      <item id="4" translatable="yes">Up-right (↗)</item>
                      <item id="5" translatable="yes">Up-left (↖)</item>
                      <item id="6" translatable="yes">Down-right (↘)</item>
                      <item id="7" translatable="yes">Down-left (↙)</item>
                    </items>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Maximum number of items (high values risk freezing)</property>
                  </object>
                </child>
                <child>
                  <object class="GtkSpinButton" id="max_chars">
                    <property name="adjustment">max_adjust</property>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">3</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Average Fall Time (seconds)</property>
                  </object>
                </child>
                <child>
                  <object class="GtkSpinButton" id="fall_time">
                    <property name="adjustment">time_adjust</property>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">4</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Average Fall Rotation (degrees)</property>
                  </object>
                </child>
                <child>
                  <object class="GtkSpinButton" id="fall_rot">
                    <property name="adjustment">rot_adjust</property>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">5</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Average Fall Drift (percentage)</property>
                  </object>
                </child>
                <child>
                  <object class="GtkSpinButton" id="fall_drift">
                    <property name="adjustment">drift_adjust</property>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">6</property>
                </layout>
              </object>
            </child>
          </object>
        </property>
        <property name="tab">
          <object class="GtkLabel">
            <property name="label" translatable="yes">Behavior</property>
          </object>
        </property>
      </object>
    </child>
    <child>
      <object class="GtkNotebookPage">
        <property name="child">
          <object class="GtkGrid">
            <property name="margin-start">18</property>
            <property name="margin-end">18</property>
            <property name="margin-top">18</property>
            <property name="margin-bottom">18</property>
            <property name="orientation">vertical</property>
            <property name="row-spacing">18</property>
            <child>
              <object class="GtkLabel">
                <property name="halign">start</property>
                <property name="hexpand">1</property>
                <property name="label" translatable="yes">DownFall</property>
                <attributes>
                  <attribute name="weight" value="bold"></attribute>
                </attributes>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Version 3.0.1</property>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="halign">start</property>
                <property name="hexpand">1</property>
                <property name="label" translatable="yes">Website</property>
                <attributes>
                  <attribute name="weight" value="bold"></attribute>
                </attributes>
                <layout>
                  <property name="column">0</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLinkButton">
                    <property name="label" translatable="yes">https://github.com/torculus/DownFall</property>
                    <property name="receives-default">1</property>
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="uri">https://github.com/torculus/DownFall</property>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">3</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="halign">start</property>
                <property name="hexpand">1</property>
                <property name="label" translatable="yes">Credits</property>
                <attributes>
                  <attribute name="weight" value="bold"></attribute>
                </attributes>
                <layout>
                  <property name="column">0</property>
                  <property name="row">4</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="margin-start">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">start</property>
                    <property name="hexpand">1</property>
                    <property name="label" translatable="yes">Developer: Ben Osenbach</property>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">5</property>
                </layout>
              </object>
            </child>
          </object>
        </property>
        <property name="tab">
          <object class="GtkLabel">
            <property name="label" translatable="yes">About</property>
          </object>
        </property>
      </object>
    </child>
  </object>
</interface>
